{
    "printWidth": 100,
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "overrides": [
      {
        "files": ["*.scss", "*.html"],
        "options": {
          "singleQuote": false
        }
      },
      {
        "files": ["*.component.html"],
        "options": {
          "parser": "angular"
        }
      },
      {
        "files": ["*.html"],
        "options": {
          "parser": "html"
        }
      }
    ]
  }